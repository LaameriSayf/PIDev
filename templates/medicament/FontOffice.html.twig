   <script>
    function rateStar(value) {
        // Mettre √† jour la valeur de notation dans l'attribut 'data-rating'
        document.querySelector('.rating').setAttribute('data-rating', value);

        // Mettre √† jour le style des √©toiles
        const stars = document.querySelectorAll('.rating span');
        stars.forEach((star, index) => {
            if (index < value) {
                star.style.color = '#1D7EB6';  // Couleur des √©toiles s√©lectionn√©es
            } else {
                star.style.color = '#E4E7ED';  // Couleur des √©toiles non s√©lectionn√©es
            }
        });

        // Vous pouvez √©galement envoyer la valeur s√©lectionn√©e au serveur via une requ√™te AJAX
        // en utilisant la variable 'value'
    }
</script>

   

