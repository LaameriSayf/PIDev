{% extends 'baseF.html.twig' %}

{% block body %}

    <!-- Start portfolio -->   
             
    <section class="portfolio section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>Liste de blog dans notre site</h2>
                        <img src="front/img/section-img.png" alt="#">
                    </div>
                </div>
            </div>
        </div>


        <div class="container-fluid">
            <div class="row">
                {# <div class="col-lg-12 col-12"> #}

                {% for item in items %}
                    <div class="col-8 col-lg-4">
                        <div class="single-pf">
                            <img src="{{ item.image }}" alt="#">
                            <a href="{{ path('blogdetails', {'id': item.id}) }}" class="btn">View Details</a>
                        </div>
                    </div>
                {% endfor %}
                {# </div> #}

            </div>
        </div>
    </section>   
    <!--/ End portfolio -->
{% endblock %}

