    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons">
</head>
<body>

<div class="container">
<br><br><br>
    <div class="title" style="color:blue;">
        <h3>Tables</h3>
    </div>
 <div id="flash-message-container">
    {% for flash_message in app.session.flashbag.get('success') %}
        <div class="alert alert-success flash-message">{{ flash_message }}</div>
    {% endfor %}
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const flashMessages = document.querySelectorAll('.flash-message');

        flashMessages.forEach(function(message) {
            // Afficher le message
            message.style.display = 'block';
        });
    });


</script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<!-- Button trigger modal -->
<div class="container">
  <div class="row justify-content-end mb-3">
    <div class="col-auto">
      <a href="{{ path('app_addcategorieblog') }}" type="button" class="btn btn-success btn-rounded" data-mdb-ripple-init>
        <i class="fas fa-plus-circle"></i> Ajouter une nouvelle cat√©gorie
      </a>
    </div>
  </div>
</div>


    <div class="row">
        <div class="ml-auto mr-auto">
            <div class="table-responsive">
                <table class="table"  class="table-warning">
                    <thead>
                        <tr>
                            <th>Nom Categorie</th>
                            <th>Description  Categorie</th>
                            <th>Option</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in commentitems %}
                            <tr>
                                <td>{{ item.titrecategorie }}</td>
                                <td>{{ item.descriptioncategorie }}</td>
                                <td>
                                    <a  href="{{ path('app_editcategorieblog', {'id': item.id}) }}" type="button" rel="tooltip" class="btn btn-success btn-just-icon btn-sm" data-original-title="" title="">
                                        <i class="material-icons">edit</i>
                                    </a>
                                    <a href="{{ path('app_deletecategorieclogs', {'id': item.id}) }}" type="button" rel="tooltip" class="btn btn-danger btn-just-icon btn-sm" data-original-title="" title="">
                                        <i class="material-icons">close</i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



                </div>
    
            </div>
        </div>
    </div>
    
    <style>
    .flash-message {
    position: fixed;
    top: 60px;
    right: 20px;
    z-index: 1000;
    padding: 10px;
    border-radius: 5px;
    background-color: #4CAF50;
    color: white;
    animation: slideIn 0.5s forwards, fadeOut 2s 2s forwards; /* 2s delay before fading out */
    display: none;
}

@keyframes slideIn {
    from {
        transform: translateX(100%);
    }
    to {
        transform: translateX(0);
    }
}

@keyframes fadeOut {
    from {
        opacity: 1;
    }
    to {
        opacity: 0;
    }
}

    </style>
    
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
